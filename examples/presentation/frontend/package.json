{
  "name": "presentation-frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "Frontend for presentation example - showcasing Inertia-Wisp by presenting itself",
  "main": "src/main.tsx",
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./src/styles.css -o ../backend/priv/static/css/styles.css --minify",
    "build:js": "esbuild src/main.tsx --bundle --outdir=../backend/priv/static/js --format=esm --splitting --chunk-names=[name]-[hash] --jsx=automatic --minify --external:./styles.css",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "npx @tailwindcss/cli -i ./src/styles.css -o ../backend/priv/static/css/styles.css --watch",
    "watch:js": "esbuild src/main.tsx --bundle --outdir=../backend/priv/static/js --format=esm --splitting --chunk-names=[name]-[hash] --jsx=automatic --minify --external:./styles.css --watch",
    "watch": "npm-run-all --parallel watch:css watch:js",
    "build:watch": "npm run watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@inertiajs/react": "^2.0.17",
    "@types/prismjs": "^1.26.5",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@fast-check/vitest": "^0.2.2",
    "@tailwindcss/cli": "^4.1.7",
    "@types/node": "^24.7.2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "esbuild": "^0.19.11",
    "fast-check": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.6.1"
  },
  "keywords": [
    "inertia",
    "gleam",
    "wisp",
    "react",
    "typescript",
    "presentation"
  ],
  "author": "Michael Buhot",
  "license": "MIT"
}

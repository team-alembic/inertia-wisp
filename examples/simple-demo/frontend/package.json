{
  "name": "simple-demo-frontend",
  "version": "1.0.0",
  "description": "Frontend for simple-demo showcasing new inertia.eval API",
  "main": "src/app.tsx",
  "scripts": {
    "dev": "esbuild src/app.tsx --bundle --outfile=../static/js/main.js --format=esm --external:./styles.css && esbuild src/styles.css --bundle --outfile=../static/css/styles.css --watch --servedir=../static --port=3000",
    "build": "esbuild src/app.tsx --bundle --outfile=../static/js/main.js --format=esm --minify && esbuild src/styles.css --bundle --outfile=../static/css/styles.css --minify",
    "build:watch": "esbuild src/app.tsx --bundle --outfile=../static/js/main.js --format=esm --watch & esbuild src/styles.css --bundle --outfile=../static/css/styles.css --watch"
  },
  "dependencies": {
    "@inertiajs/react": "^1.0.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "esbuild": "^0.19.11",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "inertia",
    "gleam",
    "wisp",
    "react",
    "typescript",
    "esbuild"
  ],
  "author": "",
  "license": "MIT"
}

{
  "name": "inertia-gleam-frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build:css": "./tailwindcss -i ./src/styles.css -o ../static/css/styles.css --minify",
    "watch:css": "./tailwindcss -i ./src/styles.css -o ../static/css/styles.css --watch",
    "build:js": "esbuild src/main.tsx --bundle --outdir=../static/js --format=esm --splitting --chunk-names=[name]-[hash] --jsx=automatic",
    "watch:js": "esbuild src/main.tsx --bundle --outdir=../static/js --format=esm --splitting --chunk-names=[name]-[hash] --watch --jsx=automatic",
    "build": "npm run type-check && npm run build:css && npm run build:js",
    "build:fast": "npm run build:css && npm run build:js",
    "watch": "npm run build:css && npm-run-all --parallel watch:css watch:js",
    "dev": "npm run watch",
    "dev:quick": "npm run build:fast && npm-run-all --parallel watch:css watch:js",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "validate-types": "npm run type-check && echo 'âœ… All types are valid'",
    "dev:safe": "npm run type-check && npm run watch"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@inertiajs/react": "^1.0.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "esbuild": "^0.19.11",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.0"
  }
}

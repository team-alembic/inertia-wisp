{
  "name": "inertia-gleam-frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run type-check && esbuild src/main.tsx --bundle --outdir=../static/js --format=esm --splitting --chunk-names=[name]-[hash] --jsx=automatic",
    "build:fast": "esbuild src/main.tsx --bundle --outdir=../static/js --format=esm --splitting --chunk-names=[name]-[hash] --jsx=automatic",
    "watch": "esbuild src/main.tsx --bundle --outdir=../static/js --format=esm --splitting --chunk-names=[name]-[hash] --watch --jsx=automatic",
    "dev": "npm run watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "validate-types": "npm run type-check && echo 'âœ… All types are valid'",
    "dev:safe": "npm run type-check && npm run watch"
  },
  "dependencies": {
    "@inertiajs/react": "^1.0.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "esbuild": "^0.19.11",
    "typescript": "^5.0.0"
  }
}